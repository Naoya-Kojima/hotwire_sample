<tr id="<%= dom_id(task) %>" data-controller="task">
  <td><%= task.title %></td>
  <td><%= task.description %></td>
  <td><%= task.completed %></td>
  <td><%= link_to 'Show', task %></td>
  <td><%= link_to 'Edit', edit_task_path(task) %></td>
  <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?', action: 'task#remove' } %></td>
</tr>
